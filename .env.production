NEXT_PUBLIC_POSTHOG_KEY=phc_Abi2d4xjO4Xvq8yKRyICgEteLIokEfbWMtfblhsNabk
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(jpg|jpeg|png|gif|webp|svg|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "/en/admin",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "destination": "/en/dashboard",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "@next-public-app-url",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "@next-public-clerk-publishable-key",
    "CLERK_SECRET_KEY": "@clerk-secret-key",
    "OPENAI_API_KEY": "@openai-api-key",
    "DATABASE_URL": "@database-url",
    "DATABASE_URL_DIRECT": "@database-url-direct",
    "ARCJET_KEY": "@arcjet-key",
    "ENCRYPTION_KEY": "@encryption-key",
    "NEXT_PUBLIC_GA_MEASUREMENT_ID": "@next-public-ga-measurement-id",
    "NEXT_PUBLIC_SENTRY_DSN": "@next-public-sentry-dsn",
    "SENTRY_ORGANIZATION": "@sentry-organization",
    "SENTRY_PROJECT": "@sentry-project",
    "SENTRY_AUTH_TOKEN": "@sentry-auth-token",
    "ENABLE_CODE_OBFUSCATION": "@enable-code-obfuscation"
  }
}
